<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MisDatos">

    <TextView
        android:id="@+id/tag_mis_datos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="31dp"
        android:layout_marginBottom="22dp"
        android:text="Mis Datos"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/txt_ver_id_usuario"
        app:layout_constraintStart_toStartOf="@+id/txt_ver_id_usuario"
        app:layout_constraintTop_toBottomOf="@+id/btn_volver_dashboard" />

    <TextView
        android:id="@+id/txt_ver_id_usuario"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:hint="Id"
        app:layout_constraintBottom_toTopOf="@+id/txt_ver_nombre_usuario"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tag_mis_datos" />

    <TextView
        android:id="@+id/txt_ver_nombre_usuario"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="14dp"
        android:hint="Nombre"
        app:layout_constraintBottom_toTopOf="@+id/txt_ver_apellido_usaurio"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_ver_id_usuario" />

    <TextView
        android:id="@+id/txt_ver_apellido_usaurio"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:hint="Apellido"
        app:layout_constraintBottom_toTopOf="@+id/txt_ver_correo_usuario"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_ver_nombre_usuario" />

    <TextView
        android:id="@+id/txt_ver_correo_usuario"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="22dp"
        android:hint="Correo"
        app:layout_constraintBottom_toTopOf="@+id/input_consulta_id"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_ver_apellido_usaurio" />

    <EditText
        android:id="@+id/input_consulta_id"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="14dp"
        android:ems="10"
        android:hint="Ingrese su id"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/input_editar_nombre"
        app:layout_constraintEnd_toEndOf="@+id/input_editar_apellido"
        app:layout_constraintStart_toStartOf="@+id/input_editar_apellido"
        app:layout_constraintTop_toBottomOf="@+id/txt_ver_correo_usuario" />

    <Button
        android:id="@+id/btn_ver_datos"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="22dp"
        android:text="Consultar"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input_editar_correo" />

    <Button
        android:id="@+id/btn_volver_dashboard"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="37dp"
        android:text="Volver"
        app:layout_constraintBottom_toTopOf="@+id/tag_mis_datos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/input_editar_nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:ems="10"
        android:hint="Editar Nombre"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/input_editar_apellido"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input_consulta_id" />

    <EditText
        android:id="@+id/input_editar_apellido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="14dp"
        android:ems="10"
        android:hint="Editar Apellido"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/input_editar_correo"
        app:layout_constraintEnd_toEndOf="@+id/input_editar_nombre"
        app:layout_constraintTop_toBottomOf="@+id/input_editar_nombre" />

    <EditText
        android:id="@+id/input_editar_correo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="19dp"
        android:ems="10"
        android:hint="Editar Correo"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/btn_ver_datos"
        app:layout_constraintStart_toStartOf="@+id/input_editar_apellido"
        app:layout_constraintTop_toBottomOf="@+id/input_editar_apellido" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="46dp"
        android:layout_marginEnd="46dp"
        android:layout_marginBottom="49dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_ver_datos">

        <Button
            android:id="@+id/btn_actualizar_usuario"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="Actualizar" />

        <Button
            android:id="@+id/btn_eliminar_usuario"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Eliminar" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>