<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MisDatos">

    <TextView
        android:id="@+id/tag_mis_datos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="71dp"
        android:text="Mis Datos"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/txt_ver_id_usuario"
        app:layout_constraintStart_toStartOf="@+id/btn_ver_datos"
        app:layout_constraintTop_toBottomOf="@+id/btn_ver_datos" />

    <TextView
        android:id="@+id/txt_ver_id_usuario"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="23dp"
        android:hint="Id"
        app:layout_constraintBottom_toTopOf="@+id/txt_ver_nombre_usuario"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tag_mis_datos" />

    <TextView
        android:id="@+id/txt_ver_nombre_usuario"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="28dp"
        android:hint="Nombre"
        app:layout_constraintBottom_toTopOf="@+id/txt_ver_apellido_usaurio"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_ver_id_usuario" />

    <TextView
        android:id="@+id/txt_ver_apellido_usaurio"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="366dp"
        android:hint="Apellido"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_ver_nombre_usuario" />

    <TextView
        android:id="@+id/txt_ver_correo_usuario"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Correo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/input_consulta_id" />

    <EditText
        android:id="@+id/input_consulta_id"
        android:layout_width="210dp"
        android:layout_height="0dp"
        android:layout_marginBottom="37dp"
        android:ems="10"
        android:hint="Ingrese su id"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/btn_ver_datos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_ver_datos"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Consultar"
        app:layout_constraintBottom_toTopOf="@+id/tag_mis_datos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input_consulta_id" />

    <Button
        android:id="@+id/btn_volver_dashboard"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="27dp"
        android:layout_marginBottom="4dp"
        android:text="Volver"
        app:layout_constraintBottom_toTopOf="@+id/btn_ver_datos"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>