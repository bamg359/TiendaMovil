<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Registro">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="41dp"
        android:layout_marginBottom="40dp"
        android:text="Registro"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/input_nombre_usuario"
        app:layout_constraintStart_toStartOf="@+id/input_nombre_usuario" />

    <EditText
        android:id="@+id/input_nombre_usuario"
        android:layout_width="209dp"
        android:layout_height="48dp"
        android:layout_marginTop="207dp"
        android:ems="10"
        android:hint="Nombre"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/input_apellido_usuario"
        android:layout_width="209dp"
        android:layout_height="53dp"
        android:layout_marginTop="13dp"
        android:ems="10"
        android:hint="Apellido"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="@+id/input_nombre_usuario"
        app:layout_constraintTop_toBottomOf="@+id/input_nombre_usuario" />

    <EditText
        android:id="@+id/input_id_usuario"
        android:layout_width="209dp"
        android:layout_height="54dp"
        android:layout_marginTop="19dp"
        android:ems="10"
        android:hint="Id"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="@+id/input_apellido_usuario"
        app:layout_constraintTop_toBottomOf="@+id/input_apellido_usuario" />

    <EditText
        android:id="@+id/input_email"
        android:layout_width="211dp"
        android:layout_height="52dp"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        app:layout_constraintStart_toStartOf="@+id/input_id_usuario"
        app:layout_constraintTop_toBottomOf="@+id/input_id_usuario" />

    <EditText
        android:id="@+id/input_password"
        android:layout_width="212dp"
        android:layout_height="54dp"
        android:layout_marginTop="18dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="@+id/input_email"
        app:layout_constraintTop_toBottomOf="@+id/input_email" />

    <Button
        android:id="@+id/btn_registrar"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="69dp"
        android:text="Registrar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input_password" />

    <Button
        android:id="@+id/btn_volver_inicio"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="31dp"
        android:layout_marginEnd="12dp"
        android:text="Volver"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>